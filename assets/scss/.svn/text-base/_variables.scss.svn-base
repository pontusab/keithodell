	rgba(255, 255, 255, 0.3)
	rgba(255, 255, 255, 0.3)
	rgba(0, 0, 0, 0.3)
	rgba(255, 255, 255, 0.3);

// Slide themes
$slide-themes:
	brown-on-dark
	brown-on-light
	green-on-dark
	green-on-light
	blue-on-dark
	blue-on-light
	black-on-dark
	black-on-light;
$slide-bg-colors:
	lighten($color-brown, 30%)
	lighten($color-brown, 30%)
	lighten($color-green-3, 30%)
	lighten($color-green-3, 30%)
	lighten($color-blue-2, 30%)
	lighten($color-blue-2, 30%)
	lighten($color-gray-1, 30%)
	lighten($color-gray-1, 30%);
$slide-h1-colors:
	$color-brown
	#f26e81
	$color-lime-green
	$color-lime-green
	#6ecde8
	#6ecde8
	#747474
	$color-gray-1;
$slide-h2-colors:
	$color-white
	$color-brown
	$color-white
	$color-green-3
	$color-white
	$color-blue-2
	$color-white
	#747474;
$slide-p-colors:
	$color-white
	$color-brown
	$color-white
	$color-green-3
	$color-white
	$color-blue-2
	$color-white
