$color-background: $color-gray-5;
$color-text: $color-gray-1;
$color-link: $color-green-2;
$color-link-active: $color-pink;
$color-null: $color-white;
$color-footer: $color-green-6;

// Dimension
$hud-width: 55px;
$hud-static-width: 220px;

// Vendor prefixes
$default-prefixes: -webkit -moz -ms;

// Typography
$base_font_size: 14;
$sans-serif: Akkurat, "Helvetica Neue", Helvetica, Arial, sans-serif;

// Button themes
$button-themes:
	brown
	green
	blue
	black
	pink
	purple
	silver
	yellow;
$button-bg-colors:
	$color-brown
	$color-green-3
	$color-blue-2
	$color-gray-1
	$color-pink
	$color-purple
	$color-gray-4
	$color-yellow-3;

// Mod themes
$mod-themes:
	brown
	green
	blue
	black
	pink;
$mod-button-themes:
	brown
	green
	blue
	black
	brown;
$mod-header-bg-colors:
	$color-brown
	$color-green-4
	$color-blue-1
	$color-gray-2
	$color-pink;
$mod-filled-header-h1-colors:
	$color-white
	$color-green-3
	$color-blue-2
	$color-white
	$color-brown;
$mod-two-tone-header-h1-colors:
